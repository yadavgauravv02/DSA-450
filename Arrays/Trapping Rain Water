#include<bits/stdc++.h>
 
using namespace std;

inline void runn() {
    #ifndef ONLINE_JUDGE                 
    freopen("input.txt","r",stdin);   
    freopen("output.txt","w",stdout);   
    freopen("error.txt","w",stderr);   
    #endif                               
}  

const int inf=1e9;

// Auxillary Space => O(1)
// Time Complexity => O(n^2)
// Space Complexity => O(n)

void print(int ar[], int n) {
	for(int i=0 ; i<n ; i++) cout<<ar[i]<<" ";
}

int main() { 
	runn(); 
	int n,m;
	cin>>n;
    int ar[n],br[n],cr[n];
    for(int i=0 ; i<n ; i++) cin>>ar[i];
    int mx=-1;
    for(int i=0 ; i<n; i++) {
        mx=max(mx,ar[i]) ;
        br[i]=mx ;
    }
    mx=-1;
    for(int i=n-1 ; i>=0 ; i--) {
        mx=max(mx,ar[i]) ;
        cr[i]=mx ;
    }
    for(int i=0 ; i<n ; i++) {
        x+=min(br[i],cr[i])-ar[i] ;
    }
    cout<<x;
}
